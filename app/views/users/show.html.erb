<h3>User</h3>
<p>Name: <%= @user.name if @user.name %></p>
<p>Email: <%= @user.email if @user.email %></p>

<% if current_user.admin? %>
	<%= form_for @user, :url => {action: "update"} do |f| %>
  		<% if @user.admin? %>
  			<%= f.button "Demote" %>
  		<% else %>
  			<%= f.submit "Promote" %>
  		<% end %>
  	<% end %>
<% end %>